!!! 5
%html
  %head
    %title  Touch Events Test
    / Meta Tags
    %meta{ :charset=>"UTF-8"}
    /%meta{ :name=>"viewport", :content=>"width=device-width, initial-scale=1.0" }
    %meta{ :name=>"viewport", :content=>"width=600, user-scalable=0" }
    /  CSS
    %link{ rel: "stylesheet", href: "./css/header.css" }

    %body
      %header
        %div
          %button{ square: true } &#9776;
          %span Title
      %div  
        %br
        %h3 Small Buttons
        %button{ outline: "true", small: "true", round: "true", type: "primary" } +      
        %button{ small: "true", type: "primary" } Save
        %button{ outline: "true", small: "true" } Cancel
        %button{ outline: "true", small: "true", upper: "true", type: "primary" } Cancel
        %button{ small: "true", round: "true", type: "primary" } +
      %div  
        %br
        %h3 Regular Buttons
        %button{ outline: "true", round: "true", type: "primary" } +     
        %button{ type: "primary" } Save
        %button{ outline: "true" } Cancel
        %button{ outline: "true", upper: "true", type: "primary" } Cancel
        %button{ round: "true", type: "primary", class: "right"} +
      %br
      %ul
        %li{ rows: 4 }
          %span.test{ rows: 4 } a
          
      %script{ src: './js/mithril.min.js' }
      %script{ src: './js/mithril-touch.js' }
      %script{ src: './boulder_results.js' }
      :javascript
        var c = m.component(App.SwipeView)
        m.mount(document.body, c)
