!!! 5
%html
	%head
		%title	CWIF 2014

		/ Meta Tags
		%meta{ :charset=>'UTF-8'}
		%meta{ :name=>'viewport', :content=>'width=device-width, initial-scale=1.0' }

		/ Stylesheets
		%link{ :rel=>'stylesheet', :href=>'./InputApp.css' }
		/ %link{ :rel=>'stylesheet', :href=>'./theme-dark.css' }

	%body

		/ Structural Content
		%h2.L5 CWIF 2014 - Qualification
		%br

		#inner
			%div.row.L5
				%input{ :id=>'PerId', :type=>'text', :placeholder=>'PerId', :pattern=>'[0-9]*' }
				%span{ :id=>'name' }
				%span{ :id=>'ctgy' }
				%span{ :id=>'rslt' } 0 / 0
				%br
				%br
			%div.row{ :id=>'tiles' }
			%div.row
				%button.bg-color-pink.fg-color-white{ :id=>'submit'} Submit Result

		/ Backbone View Templates

		/ View template
		%script{ :type=>'text/html', :id=>'boulder_tmpl', }
			%div.tile-content
				%input.blocinput{ :type=>'text', :pattern=>'[0-9]' }
				%br
				%input.rdio{ :type=>'radio', :name=>'{{id}}', :id=>'{{id}}-0', :value=>'0' }
				%label{ :for=>'{{id}}-0'} 1
				%input.rdio{ :type=>'radio', :name=>'{{id}}', :id=>'{{id}}-1', :value=>'1' }
				%label{ :for=>'{{id}}-1'} 2
				%input.rdio{ :type=>'radio', :name=>'{{id}}', :id=>'{{id}}-2', :value=>'2' }
				%label{ :for=>'{{id}}-2'} 3
				%input.rdio{ :type=>'radio', :name=>'{{id}}', :id=>'{{id}}-3', :value=>'3' }
				%label{ :for=>'{{id}}-3'} b
				%input{ :type=>'radio', :name=>'{{id}}', :value=>'4', :style=>'display:none' }
			%div.brand
				%span.name {{id}}

		/ Modernizr library module (touch detection)
		%script{ :src=>'./libs/modernizr-2.6.2.min.js' }

		/ jQuery & Backbone/Underscore library modules
		%script{ :src=>'./libs/jquery-2.0.0.min.js' }
		%script{ :src=>'./libs/underscore-1.4.4.min.js' }
		%script{ :src=>'./libs/backbone-1.0.0.min.js' }

		/ Application Code
		%script{ :src=>'./JSInputApp.min.js' }