!!! 5

%head
	%title	Boulder Results

	/ Meta Tags
	%meta{ :charset=>'UTF-8'}
	%meta{ :name=>'viewport', :content=>'width=360 maximum-scale=1.67' }

	/ Stylesheets
	%link{ :rel=>'stylesheet', :href=>'./ResultsApp.css' }

%body#outer

	/ Structural Content
	#wrapper

	/ Backbone View Templates

	/ ClimberView template
	%script{ :type=>'text/html', :id=>'climber_template' }
		%span.rank {{rank}}
		%span.name {{name}}
		%span.code {{code}}
		%span.pts {{points}}
		%span.buffer
		%span.bns {{bonus}}

	/ jQuery library modules
	%script{ :src=>'./libs/jquery-2.0.0.min.js' }

	%script{ :src=>'./libs/CSSHooks.js' }
	%script{ :src=>'./libs/jquery.isotope-1.5.25.js' }

	/ Backbone/Underscore library modules
	%script{ :src=>'./libs/underscore-1.4.4.min.js' }
	%script{ :src=>'./libs/backbone-1.0.0.min.js' }

	/ Application Code
	%script{ :src=>'./THResultsApp.min.js' }
	:javascript
		$(document).ready(function(){
			new App.ResultsListView({ cat : 'm' })
		});